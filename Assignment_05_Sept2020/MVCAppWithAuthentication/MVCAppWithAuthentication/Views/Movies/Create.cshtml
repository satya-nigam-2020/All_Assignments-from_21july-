@model MVCAppWithAuthentication.Models.ViewModel.NewMoviesViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Movies</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">

        @Html.LabelFor(m => m.VMovies.Name)
        @Html.TextBoxFor(m => m.VMovies.Name, new { @class = "form-control" })

    </div>
    <br />

    <div class="form-group">

        @Html.LabelFor(m => m.VMovies.MovieType)
        @Html.TextBoxFor(m => m.VMovies.MovieType, "", new { @class = "form-control" })

    </div>
    <br />
    <div class="form-group">

        @Html.DropDownListFor(m => m.VMovies.GenreId,
        new SelectList(Model.VGenerals, "GenreId", "GName"),
         "", new { @class = "form-control" })


    </div>
    <br />


    
    <br />

    <button type="submit" class="btn btn-primary">
        Save
    </button>

}

