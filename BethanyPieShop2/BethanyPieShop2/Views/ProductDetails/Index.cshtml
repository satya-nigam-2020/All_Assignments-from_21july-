@model IEnumerable<BethanyPieShop2.Models.ProductDetail>
@{ ViewBag.Title = "Index"; }

<h2>Products</h2>

<table class="table table-bordered tab-content">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
<tr>
    <td><div><img src="~/@product.ImagePath" /></div></td>
    <td>@product.ProductName</td>
    <td>@product.Price</td>
    <td><a href="@Url.Action("Buy", "Cart", new { id = product.ProductId })">Add To Cart</a></td>
</tr>}
    </tbody>
</table>


