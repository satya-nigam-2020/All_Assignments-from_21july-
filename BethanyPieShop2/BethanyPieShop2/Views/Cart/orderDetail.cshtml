@model BethanyPieShop2.Models.Address
@{
    ViewBag.Title = "orderDetail";
}

<h2>Order Summary</h2>
@using (Html.BeginForm("orderDetail", "Cart"))
{
<table class="table tab-content table-bordered">
    <thead>
        <tr>
            <td>Product Name</td>
            <td>price</td>
            <td>Quantity</td>
            <td>Subtotal</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<BethanyPieShop2.ViewModel.ProductViewModel>)Session["cart"])
        {
            <tr>

                <td id="p1">@item.ProductDetails.ProductName</td>
                <td id="p2">@item.ProductDetails.Price $</td>
                <td id="p3">@item.Quantity</td>
                <td id="p4">@item.ProductDetails.Price*@item.Quantity</td>

            </tr>
        }

    </tbody>
    <tbody>
        
        
            <tr>

                <td id="p1">@Model.Address1 </td>
            </tr>
        

    </tbody>
</table>

    <button type="submit" class="btn btn-group-sm btn-success">Confirm Your Order</button>
}




